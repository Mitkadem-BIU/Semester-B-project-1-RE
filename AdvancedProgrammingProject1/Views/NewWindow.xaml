<Window x:Class="AdvancedProgrammingProject1.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedProgrammingProject1" xmlns:oxy="http://oxyplot.org/wpf" xmlns:local1="clr-namespace:AdvancedProgrammingProject1.Views"
        mc:Ignorable="d"
        Title="NewWindow" Height="700" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <DockPanel Grid.RowSpan="2" Grid.Column="0">
            <local:AttrPlot/>
        </DockPanel>
        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="35,34,20,10" Width="276" Height="224" RenderTransformOrigin="0.522,0.455" >
            <local1:JoystickBoardView HorizontalAlignment="Center" VerticalAlignment="Center"  RenderTransformOrigin="0.493,0.427" Height="224"/>
        </StackPanel>
        <DockPanel Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="dashboard" FontSize="20"/>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,-0.4,0">
            <local:ControlBarView HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,-0.4,0" Width="794"/>
        </DockPanel>
        <DockPanel Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="extra stuff" FontSize="20"/>
        </DockPanel>
    </Grid>
</Window>
