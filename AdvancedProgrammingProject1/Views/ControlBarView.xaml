<Page x:Class="AdvancedProgrammingProject1.Views.ControlBarView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdvancedProgrammingProject1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="1000"
      Title="ControlBarView">

    <Grid>
        <Border Background="Gray" Margin="6,0,0,0"/>
        <StackPanel  Margin="25.6,0,49,50" Orientation="Horizontal" Grid.Column="2">
            <Button Content="move way back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="20,10,0,0"/>
            <Button Content="move back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="10,10,0,0"/>
            <Button Content="play" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="10,10,0,0"/>
            <Button Content="||" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="10,10,0,0"/>
            <Button Content="close" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="10,10,0,0"/>
            <Button Content="move forward" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="10,10,0,0"/>
            <Button Content="move way forward" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="10,10,0,0"/>
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Top" Width="50" Height="30" Margin="200,10,0,0"><Run Text="1.0"/></TextBlock>
        </StackPanel>
        <StackPanel Margin="25.6,50,49,0" Orientation="Horizontal" Grid.Column="2">
            <ScrollBar Name="timeScroller" Orientation="Horizontal"   Width ="899" Height="20"  Background="LightSalmon"  Minimum="1" Maximum="240"  Value="0" ValueChanged="timeScroller_ValueChanged" Margin="0,15,0,15.4" />
        </StackPanel>
    </Grid>
</Page>
