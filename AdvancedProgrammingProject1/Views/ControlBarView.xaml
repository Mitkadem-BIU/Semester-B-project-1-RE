<Page x:Class="AdvancedProgrammingProject1.Views.ControlBarView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AdvancedProgrammingProject1.Views"
      mc:Ignorable="d" 
      d:DesignHeight="100" d:DesignWidth="1000"
      Title="ControlBarView">

    <Grid Margin="0,0,0,0">
        <StackPanel  Margin="0,0,0,50" Width="900" Orientation="Horizontal">
            <Button Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="50,10,0,0"/>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="0,10,0,0">1.0</TextBlock>
            <Button Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="0,10,0,0"/>
            <Button Content="||" HorizontalAlignment="Left" VerticalAlignment="Top" Width="50" Height="30" Margin="50,10,0,0"/>
        </StackPanel>
        <StackPanel Margin="0,50,0,0"   Width="900" Orientation="Horizontal">
            <TextBlock Text="scrollbar" Width="50" RenderTransformOrigin="0.412,-1.409"/>
            <ScrollBar Name="timeScroller" Orientation="Horizontal"   Width ="800" Height="20"  Background="LightSalmon"  Minimum="1" Maximum="240"  Value="0" ValueChanged="timeScroller_ValueChanged" />
        </StackPanel>
    </Grid>
</Page>
