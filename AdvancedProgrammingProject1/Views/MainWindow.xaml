<Window x:Class="AdvancedProgrammingProject1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedProgrammingProject1" d:DataContext="{d:DesignInstance Type=local:MainControllerViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Enter Data" Margin="10" Padding="10">
            <StackPanel>
                <WrapPanel>
                    <Button Margin="0,20" x:Name="BtnOpenXMLFile" Click="BtnUploadXMLFile_Click" Content="Upload XML"/>
                    <TextBox Margin="20,20" Width="600" x:Name="xmlName" Text="{Binding VM_xml, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" />
                </WrapPanel>
                <WrapPanel>
                    <Button Margin="0,20" x:Name="BtnUploadCSVFile" Click="BtnUploadCSVFile_Click" Content="Upload CSV"/>
                    <TextBox Margin="20,20" Width="600" x:Name="csvName" Text="{Binding VM_csv, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
                </WrapPanel>
                <Button Margin= "300,20" Width="60" Click="BtnSave_Click">Save</Button>
            </StackPanel>
        </GroupBox>
    </Grid>

</Window>
