<Window x:Class="AdvancedProgrammingProject1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdvancedProgrammingProject1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Enter Data" Margin="10" Padding="10">
            <StackPanel>
                <WrapPanel>
                    <Button Margin="0,20" x:Name="btnUploadCSVFile" Click="btnUploadCSVFile_Click" Content="Upload CSV"/>
                    <TextBox Margin="20,20" Width="600" x:Name="txtEditor1"/>
                </WrapPanel>
                <WrapPanel>
                    <Button Margin="0,20" x:Name="btnOpenXMLFile" Click="btnUploadXMLFile_Click" Content="Upload XML"/>
                    <TextBox Margin="20,20" Width="600" x:Name="txtEditor2" />
                </WrapPanel>
                <Button Margin="300,20">Save</Button>
            </StackPanel>
        </GroupBox>
    </Grid>

</Window>
